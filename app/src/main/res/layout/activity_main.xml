<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.fragment.app.FragmentContainerView
        app:layout_constraintBottom_toTopOf="@id/main_bottom_nav_view_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/main_navigation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_bottom_nav_view_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@color/gray_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_bottom_nav_view"

            android:layout_width="match_parent"
            android:layout_height="70dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/main_bottom_navbar_background"

            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/main_bottom_nav_home_container"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/main_bottom_nav_search_container"

                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_bottom_nav_home_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"

                    android:src="@drawable/main_bottom_navbar_ic_home"

                    app:tint="@color/main_bottom_nav_icon_color_selector" />

                <TextView
                    android:id="@+id/main_bottom_nav_home_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/spoqa_han_sans_neo_regular"

                    android:gravity="center"
                    android:lineHeight="18sp"
                    android:text="홈"
                    android:textColor="@color/main_bottom_nav_text_color_selector"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom_nav_search_container"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/main_bottom_nav_bookmark_container"

                app:layout_constraintStart_toEndOf="@id/main_bottom_nav_home_container"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_bottom_nav_recipe_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"

                    android:src="@drawable/main_bottom_navbar_ic_recipe"

                    app:tint="@color/main_bottom_nav_icon_color_selector" />

                <TextView
                    android:id="@+id/main_bottom_nav_search_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/spoqa_han_sans_neo_regular"

                    android:gravity="center"
                    android:lineHeight="18sp"
                    android:text="레시피"
                    android:textColor="@color/main_bottom_nav_text_color_selector"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom_nav_bookmark_container"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/main_bottom_nav_my_container"

                app:layout_constraintStart_toEndOf="@id/main_bottom_nav_search_container"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_bottom_nav_bookmark_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"

                    android:src="@drawable/main_bottom_navbar_ic_bookmark"

                    app:tint="@color/main_bottom_nav_icon_color_selector" />

                <TextView
                    android:id="@+id/main_bottom_nav_bookmark_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/spoqa_han_sans_neo_regular"

                    android:gravity="center"
                    android:lineHeight="18sp"
                    android:text="북마크"
                    android:textColor="@color/main_bottom_nav_text_color_selector"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_bottom_nav_my_container"
                android:layout_width="0dp"
                android:layout_height="70dp"

                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toEndOf="@id/main_bottom_nav_bookmark_container"

                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/main_bottom_nav_my_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"

                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"

                    android:src="@drawable/main_bottom_navbar_ic_my"

                    app:tint="@color/main_bottom_nav_icon_color_selector" />

                <TextView
                    android:id="@+id/main_bottom_nav_my_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/spoqa_han_sans_neo_regular"

                    android:gravity="center"
                    android:lineHeight="18sp"
                    android:text="My"
                    android:textColor="@color/main_bottom_nav_text_color_selector"
                    android:textSize="12sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>