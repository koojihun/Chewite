<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/signup_finish_image_imageview"
        android:layout_width="252dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:src="@drawable/signup_finish_image"/>

    <ImageView
        android:id="@+id/signup_finish_title_imageview"
        android:layout_width="328dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/signup_finish_title"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_finish_image_imageview" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/signup_bottom_button_selector"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:lineHeight="24sp"
        android:text="츄이트 시작하기"
        android:textColor="@color/signup_bottom_button_text_color_selector"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>