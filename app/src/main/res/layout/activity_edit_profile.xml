<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/left_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/chevron_left"
            android:tint="@color/gray_900"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:text="프로필 편집"
            android:fontFamily="@font/spoqa_han_sans_neo_bold"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:lineHeight="28dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_select_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ImageView
            android:id="@+id/profile_image_imageview"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profile_camera_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:scaleType="center"
            android:src="@drawable/my_profile_camera"
            app:layout_constraintBottom_toBottomOf="@id/profile_image_imageview"
            app:layout_constraintEnd_toEndOf="@id/profile_image_imageview" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_nickname_edittext_layout"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/my_profile_nickname_edittext_background"
        android:gravity="center_vertical"
        android:padding="0dp"
        app:boxBackgroundMode="none"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_select_image_container">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_nickname_edittext"
            android:layout_width="245dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center_vertical"
            android:inputType="text"
            android:lineHeight="24dp"
            android:maxLength="20"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            android:singleLine="true"
            android:textColor="@color/gray_900"
            android:textColorHighlight="@color/primary_500"
            android:hint="닉네임을 입력해주세요"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/profile_nickname_remove_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="47dp"
        android:src="@drawable/my_profile_nickname_x_icon"
        app:layout_constraintBottom_toBottomOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintEnd_toEndOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintTop_toTopOf="@id/profile_nickname_edittext_layout" />

    <TextView
        android:id="@+id/profile_nickname_length_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="center"
        android:lineHeight="18dp"
        android:textColor="@color/gray_400"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintEnd_toEndOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintTop_toTopOf="@id/profile_nickname_edittext_layout" />

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="22dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintStart_toStartOf="@id/profile_nickname_edittext_layout"
        app:layout_constraintTop_toBottomOf="@id/profile_nickname_edittext_layout">

        <TextView
            android:id="@+id/profile_nickname_status_textview"
            android:layout_width="304dp"
            android:layout_height="18dp"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="start"
            android:lineHeight="18dp"
            android:text="@string/my_profile_nickname_status_text"
            android:textColor="@color/gray_500"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/finish_button"
            android:layout_width="328dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/signup_bottom_button_selector"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:lineHeight="20dp"
            android:text="완료"
            android:textColor="@color/signup_bottom_button_text_color_selector"
            android:textSize="14sp"
            app:backgroundTint="@null"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>