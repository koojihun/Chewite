<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/x_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_x"
            android:tint="@color/gray_900" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/logo_container"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_width="328dp"
        android:layout_height="416dp">
        <ImageView
            android:id="@+id/login_logo_imageview"
            android:layout_width="119dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/login_logo"
            android:layout_marginTop="140dp"/>
        <TextView
            android:id="@+id/login_textview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toBottomOf="@id/login_logo_imageview"
            android:layout_marginTop="24dp"
            android:text="@string/login_text"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:lineHeight="24dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/naver_login_btn"
        android:layout_width="328dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/logo_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@drawable/login_naver_button_background"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_naver"
            android:layout_marginStart="24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:text="네이버 로그인"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="14sp"
            android:lineHeight="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/kakao_login_btn"
        android:layout_width="328dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/naver_login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@drawable/login_kakao_button_background"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_kakao"
            android:layout_marginStart="24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:text="카카오 로그인"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="14sp"
            android:lineHeight="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/google_login_btn"
        android:layout_width="328dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/kakao_login_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:background="@drawable/login_google_button_background"
        android:gravity="center_vertical"
        android:clickable="true"
        android:focusable="true">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_google"
            android:layout_marginStart="24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="24dp"
            android:text="Google 로그인"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:lineHeight="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>