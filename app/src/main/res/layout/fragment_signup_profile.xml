<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    
    <ImageView
        android:id="@+id/signup_profile_title_textview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/signup_profile_title_text"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signup_profile_select_image_container"
        app:layout_constraintTop_toBottomOf="@id/signup_profile_title_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/signup_profile_image_imageview"
            android:layout_width="104dp"
            android:layout_height="104dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop" />
        <ImageView
            android:id="@+id/signup_profile_camera_imageview"
            app:layout_constraintBottom_toBottomOf="@id/signup_profile_image_imageview"
            app:layout_constraintEnd_toEndOf="@id/signup_profile_image_imageview"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:scaleType="center"
            android:src="@drawable/signup_profile_camera"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signup_profile_nickname_edittext_layout"
        app:layout_constraintTop_toBottomOf="@id/signup_profile_select_image_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        app:boxBackgroundMode="none"
        android:padding="0dp"
        android:background="@drawable/signup_profile_nickname_edittext_background"
        app:hintEnabled="false"
        app:placeholderText="닉네임을 입력해주세요"
        android:gravity="center_vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signup_profile_nickname_edittext"
            android:layout_width="245dp"
            android:layout_height="24dp"
            android:inputType="text"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginStart="12dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:textColorHighlight="@color/primary_500"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:textColor="@color/gray_900"
            android:textSize="16sp"
            android:lineHeight="24sp"
            android:maxLength="20"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/signup_profile_nickname_remove_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toStartOf="@id/signup_profile_nickname_length_textview"
        app:layout_constraintTop_toTopOf="@id/signup_profile_nickname_edittext_layout"
        app:layout_constraintBottom_toBottomOf="@id/signup_profile_nickname_edittext_layout"
        android:src="@drawable/signup_profile_nickname_x_icon"
        android:layout_marginEnd="8dp"/>
    <TextView
        android:id="@+id/signup_profile_nickname_length_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/signup_profile_nickname_edittext_layout"
        app:layout_constraintTop_toTopOf="@id/signup_profile_nickname_edittext_layout"
        app:layout_constraintBottom_toBottomOf="@id/signup_profile_nickname_edittext_layout"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="center"
        android:textColor="@color/gray_400"
        android:textSize="12sp"
        android:lineHeight="18sp" />
    <LinearLayout
        app:layout_constraintStart_toStartOf="@id/signup_profile_nickname_edittext_layout"
        app:layout_constraintEnd_toEndOf="@id/signup_profile_nickname_edittext_layout"
        app:layout_constraintTop_toBottomOf="@id/signup_profile_nickname_edittext_layout"
        android:layout_width="328dp"
        android:layout_height="22dp"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom">
        <TextView
            android:id="@+id/signup_profile_nickname_status_textview"
            android:layout_width="304dp"
            android:layout_height="18dp"
            android:text="@string/signup_profile_nickname_status_text"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="start"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:lineHeight="18sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>