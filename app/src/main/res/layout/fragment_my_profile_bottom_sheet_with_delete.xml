<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_bottom_sheet_button_group_container"
        android:layout_width="328dp"
        android:layout_height="112dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:background="@drawable/my_profile_bottom_sheet_button_group_background">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_bottom_sheet_select_album_button"
            android:layout_width="328dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"

            app:cornerRadius="12dp"

            android:text="@string/my_profile_bottom_sheet_select_album_button_text"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineHeight="24dp"

            app:backgroundTint="@color/white"
            app:rippleColor="?attr/colorControlHighlight"
            style="?attr/materialButtonStyle"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_bottom_sheet_delete_button"
            android:layout_width="328dp"
            android:layout_height="56dp"
            android:text="@string/my_profile_bottom_sheet_delete_button_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"

            app:cornerRadius="12dp"

            app:layout_constraintTop_toBottomOf="@id/profile_bottom_sheet_select_album_button"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineHeight="24dp"

            app:backgroundTint="@color/white"
            app:rippleColor="?attr/colorControlHighlight"
            style="?attr/materialButtonStyle"/>

        <View
            android:layout_width="312dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/profile_bottom_sheet_delete_button"
            app:layout_constraintTop_toBottomOf="@id/profile_bottom_sheet_select_album_button"
            android:background="#E9ECEB"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_bottom_sheet_close_button"
        android:layout_width="328dp"
        android:layout_height="56dp"
        android:text="@string/my_profile_bottom_sheet_close_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:padding="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"

        app:layout_constraintTop_toBottomOf="@id/profile_bottom_sheet_button_group_container"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:gravity="center"

        android:textColor="@color/black"
        android:textSize="16sp"
        android:lineHeight="24dp"

        app:backgroundTint="@color/white"
        app:cornerRadius="12dp"
        app:rippleColor="?attr/colorControlHighlight"
        style="?attr/materialButtonStyle"/>

</androidx.constraintlayout.widget.ConstraintLayout>